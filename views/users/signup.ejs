<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1 class="col-6 offset-3">Signup <Form></Form></h1>
       <form action="/signup" method ="POST" class="needs-validation" novalidate >
        <div class="mb-1">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              name="username" 
              id="username"
              class="form-control"
              required
            />
            <div class="valid-feedback">username  looks good</div>
          </div>
        <div class="mb-1">
            <label for="email" class="form-label">Email id</label>
            <input
              type="email"
              name="email" 
              id="eamil"
              class="form-control"
              required
            />
            <div class="valid-feedback">email looks good</div>
          </div>
          <div class="mb-1">
            <label for="email" class="form-label">Password</label>
            <input
              type="password"
              name="password" 
              id="password"
              class="form-control"
              required
            />
            <div class="valid-feedback">password looks good</div>
          </div>
          <br>
          <button class=" btn btn-success">SingnUp</button>
         
        </form>
        <br>
        <br>
        <br>
        <br>
      </div> 
 </div> 
